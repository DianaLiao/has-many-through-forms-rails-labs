<%= form_for @post do |f|%>
  <%= f.label "Title" %>
  <%= f.text_field :title %><br>
  <%= f.label "Post Body" %>
  <%= f.text_area :content %><br>
  <%= f.label "Choose or add category or categories" %>
  <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %><br>
  <%= f.fields_for :categories, post.categories.build do |categories_fields| %>
    <%= categories_fields.label "If category does not exist, enter here:" %>
    <%= categories_fields.text_field :name %>
  <% end %><br>
  <%= f.submit "Create Post" %>
<% end %>
